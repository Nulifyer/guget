{
  "name": "guget",
  "displayName": "guget - NuGet Package Manager",
  "description": "Manage NuGet packages across .NET projects with an interactive TUI",
  "version": "0.1.0",
  "publisher": "nulifyer",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/nulifyer/guget"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "nuget",
    "dotnet",
    "csharp",
    "fsharp",
    "package-manager",
    "net",
    "packages",
    "dependencies",
    "vulnerability",
    "tui"
  ],
  "galleryBanner": {
    "color": "#1e1e2e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/v/release/nulifyer/guget?label=CLI",
      "href": "https://github.com/nulifyer/guget/releases",
      "description": "Latest CLI release"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/nulifyer.guget",
      "href": "https://marketplace.visualstudio.com/items?itemName=nulifyer.guget",
      "description": "VS Code Marketplace version"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/i/nulifyer.guget",
      "href": "https://marketplace.visualstudio.com/items?itemName=nulifyer.guget",
      "description": "Install count"
    }
  ],
  "icon": "icon.png",
  "activationEvents": [
    "workspaceContains:**/*.csproj",
    "workspaceContains:**/*.fsproj"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guget.manage",
        "title": "Guget: Manage NuGet Packages",
        "icon": {
          "light": "icon.svg",
          "dark": "icon.svg"
        }
      },
      {
        "command": "guget.manageProject",
        "title": "Guget: Manage NuGet Packages",
        "icon": {
          "light": "icon.svg",
          "dark": "icon.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "guget.manage",
          "when": "guget:hasDotnetProjects"
        },
        {
          "command": "guget.manageProject",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "guget.manageProject",
          "when": "resourceExtname =~ /^\\.(csproj|fsproj)$/",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "guget.manageProject",
          "when": "resourceExtname =~ /^\\.(csproj|fsproj)$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "guget",
      "properties": {
        "guget.binaryPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path to the `guget` binary. Leave empty to search `PATH`."
        },
        "guget.verbosity": {
          "type": "string",
          "default": "warn",
          "enum": [
            "none",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "description": "Log verbosity level passed to guget via -v flag."
        },
        "guget.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "auto-light",
            "auto-dark",
            "dracula",
            "catppuccin-mocha",
            "catppuccin-macchiato",
            "catppuccin-frappe",
            "catppuccin-latte",
            "nord",
            "tokyo-night",
            "everforest",
            "gruvbox"
          ],
          "description": "Color theme passed to guget via --theme flag."
        },
        "guget.additionalArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional CLI arguments to pass to guget."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.5.0"
  }
}
